<tamination>

  <tam title="Magic Walk and Dodge" group="Magic"
       formation="Magic Column RH">
    <path>
      <move select="Forward" beats="2" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Dodge Right" beats="4" />
    </path>
    <path>
      <move select="Dodge Left" beats="4" />
    </path>
  </tam>

  <tam title="Magic Transfer the Column" group="Magic">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="270"/>
      <dancer gender="boy" y="-1" x="-1" angle="270"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path couples="2 4">
      <move select="Run Right" beats="4" scaleY="2" />
      <move select="Forward 2" beats="3" />
      <move select="Lead Right" beats="3.5" scaleX="2" />
    </path>
    <path couples="1 3">
      <move select="Forward 2" beats="4" />
      <move select="Swing Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
      <move select="Run Right" beats="3.5" scaleY="2" />
      <move select="Quarter Right" beats="3" offsetY="-1" />
    </path>
    <path couples="4 2">
      <move select="Forward" beats="2" />
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Swing Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
  </tam>
</tamination>
