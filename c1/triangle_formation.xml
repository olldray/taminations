<tamination>

  <tam title="Outpoint Triangle Circulate"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       group=" ">
    <path numbers="6 3">
      <move select="Flip Left" />
    </path>
    <path numbers="2 7">
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path numbers="5 4">
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path numbers="8 1">
    </path>
  </tam>

  <tam title="Inpoint Triangle Circulate"
       from="Right-Hand Diamonds"
       group=" " >
     <formation>      <dancer gender="boy" x="0" y="-3" angle="270"/>      <dancer gender="girl" x="-3" y="-2" angle="90"/>      <dancer gender="boy" x="0" y="-1" angle="270"/>      <dancer gender="girl" x="3" y="-2" angle="270"/>    </formation>
    <path numbers="6 3">
      <move select="Run Right" beats="3" offsetX="-1" scaleY="1.5" />
    </path>
    <path numbers="2 7">
      <move select="Run Right" beats="3" offsetX="1" scaleY="1.5" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" beats="3"/>
    </path>
    <path numbers="8 1">
    </path>
  </tam>

  <tam title="Tandem-Based Triangle Circulate"
       from="Hourglass with Left-Hand Tandem Triangles"
       group=" " >
     <formation>      <dancer gender="boy" x="-2" y="-3" angle="0"/>      <dancer gender="girl" x="-3" y="0" angle="90"/>      <dancer gender="boy" x="-2" y="3" angle="180"/>      <dancer gender="girl" x="0" y="1" angle="0"/>    </formation>
    <path numbers="3 6">
      <move select="Forward 4" />
    </path>
    <path numbers="1 8">
    </path>
    <path numbers="2 7">
      <move select="U-Turn Left" beats="4" offsetX="-2" offsetY="2" />
    </path>
    <path numbers="4 5">
      <move select="U-Turn Left" beats="4" offsetX="2" offsetY="2" />
    </path>
  </tam>

  <tam title="Wave-Based Triangle Circulate"
       from="Right-Hand Galaxy"
       formation="Galaxy RH GP"
       group=" " >
    <path numbers="3 6">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path numbers="1 8">
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" />
    </path>
    <path numbers="4 5">
    </path>
  </tam>

</tamination>
