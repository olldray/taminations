<tamination>

  <tam title="Any Hand Remake" parts="1.5;3" group="Any Hand">
  <formation>
    <dancer gender="boy" x="3" y="2" angle="270"/>
    <dancer gender="girl" x="1" y="2" angle="90"/>
    <dancer gender="boy" x="-1" y="2" angle="90"/>
    <dancer gender="girl" x="-3" y="2" angle="270"/>
  </formation>
    <path numbers="3 6">
      <move select="Hinge Right"/>
      <move select="Flip Left"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX=".33" offsetY=".33" />
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
    </path>
    <path numbers="1 8">
      <move select="Hinge Right"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Left" hands="right" offsetX=".33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY=".33" />
    </path>
    <path numbers="7 2">
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Right" hands="left" offsetX=".33" offsetY=".33" />
      <move select="Quarter Right" hands="left" offsetX="-.33" offsetY=".33" />
      <move select="Quarter Right" hands="left" offsetX="-.33" offsetY="-.33" />
    </path>
    <path numbers="5 4">
      <move select="Hinge Left"/>
      <move select="Run Right"/>
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX=".33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
    </path>
  </tam>

  <tam title="Any Hand Quarter Thru" group="Any Hand">
    <formation>
      <dancer gender="boy" x="3" y="2" angle="90"/>
      <dancer gender="girl" x="1" y="2" angle="270"/>
      <dancer gender="boy" x="-1" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="90"/>
    </formation>
    <path numbers="7 2">
      <move select="Hinge Left"/>
    </path>
    <path numbers="5 4">
      <move select="Hinge Left"/>
      <move select="Run Right"/>
    </path>
    <path numbers="3 6">
      <move select="Hinge Right"/>
      <move select="Flip Left"/>
    </path>
    <path numbers="1 8">
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Any Hand Swing Thru" formation="Inverted Lines Ends Facing Out" group="Any Hand">
    <path numbers="5 4">
      <move select="Swing Left"/>
      <move select="Run Right"/>
    </path>
    <path numbers="6 3">
      <move select="Swing Left"/>
    </path>
    <path numbers="7 2">
      <move select="Swing Right"/>
    </path>
    <path numbers="8 1">
      <move select="Swing Right"/>
      <move select="Flip Left"/>
    </path>
  </tam>

  <tam title="Any Hand Three Quarter Thru" formation="Inverted Lines Ends Facing Out" group="Any Hand">
    <path>
      <move select="Cast Left"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="Cast Right"/>
      <move select="Flip Left"/>
    </path>
  </tam>

  <tam title="Any Hand Three Quarter Thru (from RH diamond)"
       formation="Diamond RH" group="Any Hand">
    <path numbers="2 3">
      <move select="Stand" beats="4.5"/>
      <move select="Run Right"/>
    </path>
    <path numbers="4 1">
      <move select="Cast Right"/>
      <move select="Flip Left"/>
    </path>
  </tam>

  <tam title="Any Hand Three Quarter Thru (from LH diamond)"
       formation="Diamond LH Boys Center" group="Any Hand">
    <path>
      <move select="Cast Left"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Stand" beats="4.5"/>
      <move select="Flip Left"/>
    </path>
  </tam>

  <tam title="Any Hand Three Quarter Thru (from twin diamonds)"
       formation="Diamonds RH Girl Points" group="Any Hand">
    <path>
      <move select="Cast Right"/>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Stand" beats="4.5"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Cast Right"/>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Stand" beats="4.5"/>
      <move select="Run Right"/>
    </path>
  </tam>

</tamination>