<tamination title="Cross Chain Reaction">

  <tam title="Cross Chain Reaction" from="Quarter Tag" formation="Quarter Tag" parts="4;3">
    <path couples="2 4">
      <move select="Forward" beats="2"/>
      <move select="Hinge Right" beats="2"/>
      <move select="Eighth Left" hands="left" offsetX=".353" offsetY=".647" beats="1.5"/>
      <move select="Eighth Left" hands="left" offsetX=".707" offsetY="-.207" beats="1.5"/>
      <move select="Extend Right" beats="4.5" scaleX="2" scaleY="2"/>
    </path>
    <path couples="2 4">
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Stand"/>
      <move select="Eighth Right" beats="1.5" offsetX="1.06" offsetY=".06" />
      <move select="Eighth Right" offsetX=".707" offsetY="-.793" beats="1.5"/>
      <move select="Cast Left"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="4" scaleX="5" scaleY="3"/>
      <move select="Run Right"/>
      <move select="Cast Left"/>
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Hinge Right" beats="2"/>
      <move select="Flip Left"/>
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Cross Chain Reaction" from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH" parts="4;3">
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
      <move select="Stand"/>
      <move select="Eighth Left" hands="left" offsetX=".353" offsetY=".647" beats="1.5"/>
      <move select="Eighth Left" hands="left" offsetX=".707" offsetY="-.207" beats="1.5"/>
      <move select="Cast Right"/>
    </path>
    <path>
    	<move select="Stand" beats="3"/>
      <move select="Hinge Left" scaleX="2"/>
      <move select="Eighth Right" beats="1.5" offsetX="1.06" offsetY=".06" />
      <move select="Eighth Right" offsetX=".707" offsetY="-.793" beats="1.5"/>
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="5" scaleY="3"/>
      <move select="Run Left"/>
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
      <move select="Quarter Left" hands="left" offsetY="1"/>
      <move select="Flip Right"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Cross Chain Reaction"
       from="Right-Hand Quarter Lines"
       formation="Quarter Lines RH"
       parts="4.5;3" >
    <path>
    	<move select="Forward"/>
    	<move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    	<move select="Stand" beats="1.5"/>
      <move select="Eighth Left" hands="left" offsetX=".353" offsetY=".647" beats="1.5"/>
      <move select="Eighth Left" hands="left" offsetX=".707" offsetY="-.207" beats="1.5"/>
      <move select="Cast Right"/>
    </path>
    <path>
    	<move select="Stand" beats="3"/>
    	<move select="Hinge Left" scaleX="2"/>
      <move select="Eighth Right" beats="1.5" offsetX="1.06" offsetY=".06" />
      <move select="Eighth Right" offsetX=".707" offsetY="-.793" beats="1.5"/>
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2"/>
    </path>
    <path>
    	<move select="Forward"/>
    	<move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    	<move select="Quarter Left" hands="left" offsetY="1"/>
    	<move select="Swing Right"/>
    	<move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
    <path>
    	<move select="Lead Right" beats="4.5" scaleX="5" scaleY="3"/>
    	<move select="Swing Right"/>
    	<move select="BackHinge Left"/>
    	<move select="BackHinge Left"/>
    	<move select="BackHinge Left"/>
    </path>
  </tam>

</tamination>
