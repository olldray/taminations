<tamination>

  <tam title="3 by 1 Interlocked Triangle Circulate"
       from="Interlocked 3 by 1 Triangles">
     <formation>      <dancer gender="boy" x="-3" y="1" angle="0"/>      <dancer gender="girl" x="-3" y="-1" angle="180"/>      <dancer gender="boy" x="0" y="-1" angle="180"/>      <dancer gender="girl" x="0" y="-3" angle="180"/>    </formation>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="3 by 1 Interlocked Triangle Circulate"
       from="&quot;H&quot; formation">
     <formation>      <dancer gender="boy" x="-3" y="3" angle="0"/>      <dancer gender="girl" x="-3" y="-3" angle="180"/>      <dancer gender="boy" x="0" y="-1" angle="180"/>      <dancer gender="girl" x="0" y="-3" angle="180"/>    </formation>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
  </tam>

</tamination>
